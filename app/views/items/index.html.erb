<%# <h1>Listing brands</h1> %>
<% if (notice) %>
    <div class="alert alert-success fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t("item.itemName") %></th>
      <th><%= t("item.itemPrice") %></th>
      <th><%= t("item.itemDescription") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.itemName %></td>
        <td><%= item.itemPrice %></td>
        <td><%= item.itemDescription %></td>
        <td><div style="float: right"><%= link_to t("Show"), item, :class => "btn btn-success" %>
        <%= link_to t("Edit"), edit_item_path(item), :class => "btn btn-warning" %>
        <%= link_to t("Destroy"), item, method: :delete, data: { confirm: t("Warn.Areyousure") }, :class => "btn btn-danger" %></div></td>
      </tr>
    <% end %>
  </tbody>
</table>

